<% include ./partials/header %>

<div class="container table-scrollable">

<h1>Your search results for <%= topic %> videos in <%= domain %> </h1>
<br>



    <table id="selected-video-table" class="table table-hover table-sm table-dark table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Video Name</th>
                <th scope="col" colspan="2">Description</th>
            </tr>
        </thead>
<% var i = 1 %>
        <tbody>
<% videos.forEach(function(video) { %>
            <tr>
                <th scope="row"><%= i %></th>
                <% i = i + 1 %>
                <td>   
                    <a href="<%= video.ka_url %>"><%= video.title %></a>
                </td>
                <td><%= video.description %></td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/upload/<%= video.id %>">Upload Translation</a>
                </td>
            </tr>
<% }) %>
        </tbody>
    </table>
</div>

<% include ./partials/footer %>